<Page x:Class="Registration.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registration"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="UserPage">

    <Grid>
     
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Image  Name ="image" Grid.Row="0" Stretch="Fill"/>
        <TextBlock Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <Button Name="goBack" Content="Выйти" Grid.Row="2" Click="GoBackButtonClick"/>
    </Grid>
</Page>
